# Pide una plabra y te devuelve sus letras
def deletreo():
    palabra=input("Dime una palabra:")
    for cont iun range(0,len(palabra)):
        print(palabra[cont]+ " ")
    print("Tiene "+str(cont+1) + "letras")
    
deletreo()



def esVocal(letra):
    if(letra=="a" or letra=="e" or letra=="i" or letra=="o" or letra=="u"):
        respuesta=true
    return(respuesta)
    
def deletreo():
    palabra=input("Dime una palabra:")
    cuentavocales=0
    for cont iun range(0,len(palabra)):
        print(palabra[cont]+ " ")
        if(esVocal(palabra[cont])==True
        cuentavocales=cuentavocales+1
    print("Tiene "+str(cont+1) + "letras")
    
deletreo()
